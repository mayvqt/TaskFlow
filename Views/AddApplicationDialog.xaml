<Window x:Class="TaskFlow.Views.AddApplicationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Add Application" 
        Height="700" Width="750"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Add New Application" 
                   FontSize="20" FontWeight="Medium" 
                   Margin="0,0,0,25"/>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,15,0">
            <StackPanel Margin="0,0,10,0">
                <!-- Application Name -->
                <TextBox x:Name="NameTextBox"
                         materialDesign:HintAssist.Hint="Application Name"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Margin="0,0,0,20"/>

                <!-- Executable Path -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox x:Name="ExecutablePathTextBox"
                             Grid.Column="0"
                             materialDesign:HintAssist.Hint="Executable Path (.exe or .bat)"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Margin="0,0,10,0"/>
                    
                    <Button Grid.Column="1" 
                            Content="Browse"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Click="BrowseButton_Click"/>
                </Grid>

                <!-- Arguments -->
                <TextBox x:Name="ArgumentsTextBox"
                         materialDesign:HintAssist.Hint="Command Line Arguments (Optional)"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Margin="0,0,0,20"/>

                <!-- Working Directory -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox x:Name="WorkingDirectoryTextBox"
                             Grid.Column="0"
                             materialDesign:HintAssist.Hint="Working Directory (Optional)"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Margin="0,0,10,0"/>
                    
                    <Button Grid.Column="1" 
                            Content="Browse"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Click="BrowseFolderButton_Click"/>
                </Grid>

                <!-- Options Group -->
                <materialDesign:Card Padding="20" Margin="0,5,0,20" materialDesign:ShadowAssist.ShadowDepth="Depth1">
                    <StackPanel>
                        <TextBlock Text="Options" FontWeight="Medium" Margin="0,0,0,10"/>
                        
                        <!-- Enable Application -->
                        <CheckBox x:Name="IsEnabledCheckBox"
                                  Content="Enable this application"
                                  IsChecked="True"
                                  Margin="0,0,0,10"/>

                        <!-- Restart on Crash -->
                        <CheckBox x:Name="RestartOnCrashCheckBox"
                                  Content="Restart automatically if application crashes"
                                  IsChecked="True"
                                  Margin="0,0,0,10"/>

                        <!-- Max Restart Attempts -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" 
                                       Text="Max restart attempts:" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                            
                            <TextBox x:Name="MaxRestartAttemptsTextBox"
                                     Grid.Column="1"
                                     Text="3"
                                     Width="100"
                                     HorizontalAlignment="Left"/>
                        </Grid>

                        <!-- Startup Delay -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" 
                                       Text="Startup delay:" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                            
                            <TextBox x:Name="StartupDelayTextBox"
                                     Grid.Column="1"
                                     Text="0"
                                     Width="100"
                                     HorizontalAlignment="Left"/>
                            
                            <TextBlock Grid.Column="2" 
                                       Text="seconds" 
                                       VerticalAlignment="Center"
                                       Margin="5,0,0,0"/>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Startup Schedule Group -->
                <materialDesign:Card Padding="20" Margin="0,5,0,20" materialDesign:ShadowAssist.ShadowDepth="Depth1">
                    <StackPanel>
                        <TextBlock Text="Startup Schedule" FontWeight="Medium" Margin="0,0,0,10"/>
                        
                        <!-- Auto Start -->
                        <CheckBox x:Name="AutoStartCheckBox"
                                  Content="Start automatically when TaskFlow starts"
                                  Margin="0,0,0,10"/>

                        <!-- Additional Schedule Options -->
                        <StackPanel x:Name="ScheduleOptionsPanel" Visibility="Collapsed">
                            <TextBlock Text="Additional schedule options will be available after adding the application."
                                       Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,25,0,0">
            <Button Content="Cancel" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Click="CancelButton_Click"
                    Margin="0,0,15,0"
                    Width="120"
                    Height="40"/>
            
            <Button Content="Add Application" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="AddButton_Click"
                    Width="160"
                    Height="40"/>
        </StackPanel>
    </Grid>
</Window>